{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint-config-egg", "airbnb-base", "prettier", "plugin:node/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "requireAlias": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-plusplus": "off",
    "no-process-exit": "off",
    "class-methods-use-this": "off",
    "strict": "off",
    "node/no-exports-assign": "off",
    "no-multi-assign": "off",
    "no-restricted-syntax": ["error",  "WithStatement", "BinaryExpression[operator='in']"],
    "array-bracket-spacing": [
      "error",
      "never"
    ]
  }
}
